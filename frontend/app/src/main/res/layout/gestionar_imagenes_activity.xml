<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgFondo"
        android:layout_width="420dp"
        android:layout_height="209dp"
        android:background="@drawable/patrick_tomasso_unsplash_3"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="-1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vTransparente"
        android:layout_width="424dp"
        android:layout_height="212dp"
        android:background="#80000000"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgVolver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view6"
        android:layout_width="429dp"
        android:layout_height="629dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/fondo_redondeado"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHola3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="104dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Foto de Patrick Tomasso en Unsplash"
        android:textColor="@color/white"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@id/imgVolver"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGestionarImagenes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="144dp"
        android:text="Gestionar imagenes"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAplicarCambios"
        android:layout_width="236dp"
        android:layout_height="50dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="624dp"
        android:background="@drawable/bg_boton"
        android:text="Aplicar cambios"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Imagen seleccionada"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Imagenes -->
    <ImageButton
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="236dp"
        android:background="#A4C6EE"
        android:scaleType="centerInside"
        android:src="@drawable/icono_editar_foto"
        app:layout_constraintStart_toStartOf="@id/tvGestionarImagenes"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img2"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="236dp"
        android:background="#A4C6EE"
        android:scaleType="centerInside"
        android:src="@drawable/icono_editar_foto"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img3"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="236dp"
        android:background="#A4C6EE"
        android:scaleType="centerInside"
        android:src="@drawable/icono_editar_foto"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="344dp"
        android:background="#A4C6EE"
        android:scaleType="centerInside"
        android:src="@drawable/icono_editar_foto"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="344dp"
        android:background="#A4C6EE"
        android:scaleType="centerInside"
        android:src="@drawable/icono_editar_foto"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img4"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="344dp"
        android:background="#A4C6EE"
        android:scaleType="centerInside"
        android:src="@drawable/icono_editar_foto"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="464dp"
        android:background="#A4C6EE"
        android:scaleType="centerInside"
        android:src="@drawable/icono_editar_foto"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="464dp"
        android:background="#A4C6EE"
        android:scaleType="centerInside"
        android:src="@drawable/icono_editar_foto"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="464dp"
        android:background="#A4C6EE"
        android:scaleType="centerInside"
        android:src="@drawable/icono_editar_foto"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
