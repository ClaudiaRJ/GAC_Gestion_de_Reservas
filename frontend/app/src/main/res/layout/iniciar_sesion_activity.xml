<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgEasyTable"
        android:layout_width="377dp"
        android:layout_height="255dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/logo_easy_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="252dp"
        android:text="¡Bienvenido!"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@id/imgEasyTable"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="355dp"
        android:layout_height="46dp"
        android:layout_marginTop="316dp"
        android:text="Email"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvBienvenido"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etContraseña"
        android:layout_width="355dp"
        android:layout_height="46dp"
        android:layout_marginTop="376dp"
        android:text="Contraseña"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvBienvenido"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvRecuperarContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="440dp"
        android:clickable="true"
        android:focusable="true"
        android:text="¿Has olvidado la contraseña?"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/tvBienvenido"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNuevoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="600dp"
        android:text="Soy un nuevo usuario"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/btnIniciarSesion"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCrearCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginTop="600dp"
        android:clickable="true"
        android:focusable="true"
        android:text="crear cuenta"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/btnIniciarSesion"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIniciarSesion"
        android:layout_width="343dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="480dp"
        android:text="Iniciar sesión"
        android:textSize="20dp"
        android:background="@drawable/bg_boton"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/tvBienvenido"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
