<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgFondo"
        android:layout_width="420dp"
        android:layout_height="209dp"
        android:background="@drawable/takahiro_taguchi_unsplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vTransparente"
        android:layout_width="424dp"
        android:layout_height="212dp"
        android:background="#80000000"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgVolver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="164dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Foto de takahiro taguchi en Unsplash"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/imgVolver"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:contentDescription="Menú"
        android:scaleType="centerInside"
        android:src="@drawable/icono_persona"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="414dp"
        android:layout_height="545dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/fondo_redondeado"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGestionarEmpleados"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="212dp"
        android:text="Gestionar empleados"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón: Añadir empleados -->

    <Button
        android:id="@+id/btnAñadirEmpleados"
        android:layout_width="344dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/bg_card"
        android:text="Añadir empleados"
        app:layout_constraintStart_toStartOf="@id/tvGestionarEmpleados"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnListaEmpleados"
        android:layout_width="344dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="404dp"
        android:background="@drawable/bg_card"
        android:text="Lista empleados"
        app:layout_constraintStart_toStartOf="@id/tvGestionarEmpleados"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEliminarEmpleados"
        android:layout_width="344dp"
        android:layout_height="59dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/bg_card"
        android:text="Eliminar empleados"
        app:layout_constraintStart_toStartOf="@id/tvGestionarEmpleados"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="284dp"
        android:elevation="5dp"
        android:src="@drawable/icono_anadir_empleado"
        app:layout_constraintStart_toStartOf="@id/btnAñadirEmpleados"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón: Lista empleados -->

    <ImageView
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="412dp"
        android:elevation="5dp"
        android:src="@drawable/icono_lista"
        app:layout_constraintStart_toStartOf="@id/btnListaEmpleados"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón: Eliminar empleados -->

    <ImageView
        android:layout_width="50dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="552dp"
        android:elevation="5dp"
        android:src="@drawable/icono_eliminar"
        app:layout_constraintStart_toStartOf="@id/btnEliminarEmpleados"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
