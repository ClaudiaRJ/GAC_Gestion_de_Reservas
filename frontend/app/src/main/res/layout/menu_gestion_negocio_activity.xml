<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgFondo"
        android:layout_width="420dp"
        android:layout_height="209dp"
        android:background="@drawable/takahiro_taguchi_unsplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vTransparente"
        android:layout_width="424dp"
        android:layout_height="212dp"
        android:background="#80000000"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgVolver"
        android:layout_width="31dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHola4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="212dp"
        android:layout_marginTop="164dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Foto de takahiro taguchi en Unsplash"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/imgVolver"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:contentDescription="Menú"
        android:scaleType="centerInside"
        android:src="@drawable/icono_persona"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="414dp"
        android:layout_height="545dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/fondo_redondeado"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGestionarNegocio"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="212dp"
        android:text="Gestionar negocio"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón: Modificar descripción -->
    <Button
        android:id="@+id/btnModificarDescripción"
        android:layout_width="344dp"
        android:layout_height="59dp"
        android:layout_marginTop="280dp"
        android:text="Modificar descripción"
        android:background="@drawable/bg_card"
        app:layout_constraintStart_toStartOf="@id/tvGestionarNegocio"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="284dp"
        android:elevation="5dp"
        android:src="@drawable/icono_gestion_reservas"
        app:layout_constraintStart_toStartOf="@id/btnModificarDescripción"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón: Modificar horario -->
    <Button
        android:id="@+id/btnModificarHorario"
        android:layout_width="344dp"
        android:layout_height="59dp"
        android:layout_marginTop="408dp"
        android:background="@drawable/bg_card"
        android:text="Modificar horario"
        app:layout_constraintStart_toStartOf="@id/tvGestionarNegocio"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="59dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="412dp"
        android:elevation="5dp"
        android:src="@drawable/icono_calendario"
        app:layout_constraintStart_toStartOf="@id/btnModificarHorario"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón: Gestionar imágenes -->
    <Button
        android:id="@+id/btnGestionarImagenes"
        android:layout_width="344dp"
        android:layout_height="59dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="544dp"
        android:background="@drawable/bg_card"
        android:text="Gestionar imagenes"
        app:layout_constraintStart_toStartOf="@id/tvGestionarNegocio"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="63dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="548dp"
        android:elevation="5dp"
        android:src="@drawable/icono_gestionar_imagenes"
        app:layout_constraintStart_toStartOf="@id/btnGestionarImagenes"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
