<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgFondo"
        android:layout_width="420dp"
        android:layout_height="209dp"
        android:background="@drawable/patrick_tomasso_unsplash_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vTransparente"
        android:layout_width="424dp"
        android:layout_height="212dp"
        android:background="#80000000"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetalleFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Foto de Patrick Tomasso en Unsplash"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/imgVolver"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgVolver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view6"
        android:layout_width="429dp"
        android:layout_height="629dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/fondo_redondeado"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNombreRestaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="132dp"
        android:text=" "
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="212dp"
        android:text="Detalles"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lineaDetalles"
        android:layout_width="70dp"
        android:layout_height="2dp"
        android:layout_marginTop="236dp"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="@id/tvDetalles"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReservar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="212dp"
        android:text="Reservar"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lineaReservar"
        android:layout_width="80dp"
        android:layout_height="2dp"
        android:layout_marginTop="236dp"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="@id/tvReservar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="378dp"
        android:layout_height="464dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="256dp"
        android:clickable="true"
        android:focusable="true"
        android:text=" "
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
