<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imgVolver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/flecha_atras_negra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvModificarDescripción"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:text="Modificar descripción"
        android:textColor="@color/black"
        android:textSize="30sp"
    app:layout_constraintStart_toStartOf="@id/imgVolver"
    app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vDescripción"
        android:layout_width="360dp"
        android:layout_height="467dp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_reserva"
        app:layout_constraintStart_toStartOf="@id/tvModificarDescripción"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edModificarDescripción"
        android:layout_width="338dp"
        android:layout_height="442dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="144dp"
        android:background="@android:color/transparent"
        android:text=" "
        app:layout_constraintStart_toStartOf="@id/vDescripción"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="276dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvModificarDescripción"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="208dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="628dp"
        android:background="@drawable/bg_boton"
        android:text="Aceptar cambio"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/tvModificarDescripción"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
