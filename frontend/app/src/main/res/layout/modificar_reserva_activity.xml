<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/imgFondo"
        android:layout_width="420dp"
        android:layout_height="209dp"
        android:background="@drawable/patrick_tomasso_unsplash_3"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="-1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Vista transparente encima de la imagen de fondo -->
    <View
        android:id="@+id/vTransparente"
        android:layout_width="424dp"
        android:layout_height="212dp"
        android:background="#80000000"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón de volver -->
    <ImageButton
        android:id="@+id/imgVolver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/flecha_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Fondo redondeado para la sección -->
    <View
        android:id="@+id/view6"
        android:layout_width="429dp"
        android:layout_height="629dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/fondo_redondeado"
        app:layout_constraintStart_toStartOf="@id/imgFondo"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Texto con créditos de la imagen -->
    <TextView
        android:id="@+id/tvHola3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="104dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Foto de Patrick Tomasso en Unsplash"
        android:textColor="@color/white"
        android:textSize="10sp"
    app:layout_constraintStart_toStartOf="@id/imgVolver"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Caja de comensales -->
    <TextView
        android:id="@+id/boxComensales"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/bg_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Número de comensales -->
    <TextView
        android:id="@+id/boxNºComensales"
        android:layout_width="169dp"
        android:layout_height="40dp"
        android:layout_marginStart="192dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/bg_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón para aumentar comensales -->
    <ImageButton
        android:id="@+id/btnMas"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/bg_mas_menos"
        android:src="@drawable/icono_mas"
        app:layout_constraintStart_toStartOf="@id/boxNºComensales"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón para disminuir comensales -->
    <ImageButton
        android:id="@+id/btnMenos"
        android:layout_width="30dp"
        android:layout_height="31dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/bg_mas_menos"
        android:src="@drawable/icono_menos"
        app:layout_constraintStart_toStartOf="@id/btnMas"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Número de comensales -->
    <TextView
        android:id="@+id/tvNumComensales"
        android:layout_width="23dp"
        android:layout_height="35dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="188dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="30sp"
    app:layout_constraintStart_toStartOf="@id/boxNºComensales"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Texto 'Comensales' -->
    <TextView
        android:id="@+id/tvComensales"
        android:layout_width="118dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="192dp"
        android:text="Comensales"
        android:textColor="#757575"
        android:textSize="20sp"
    app:layout_constraintStart_toStartOf="@id/boxComensales"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Título de modificar reserva -->
    <TextView
        android:id="@+id/tvModificarReserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="132dp"
        android:text="Modificar reserva"
        android:textColor="@color/black"
        android:textSize="40sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Calendario para seleccionar la fecha -->
    <android.widget.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="359dp"
        android:layout_height="288dp"
        android:layout_marginTop="296dp"
        android:background="#A4C6EE"
        android:showWeekNumber="false"
        app:layout_constraintStart_toStartOf="@id/tvFecha"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón para seleccionar hora -->
    <Button
        android:id="@+id/btnAbrirTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="592dp"
        android:text="Seleccionar Hora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Texto 'Fecha' -->
    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="240dp"
        android:text="Fecha"
        android:textColor="@color/black"
        android:textSize="30sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón para modificar reserva -->
    <Button
        android:id="@+id/btnModificarReserva"
        android:layout_width="236dp"
        android:layout_height="50dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="664dp"
        android:text="Modificar reserva"
        android:background="@drawable/bg_boton"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
