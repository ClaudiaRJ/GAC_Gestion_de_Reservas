<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imgVolver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/flecha_atras_negra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCostes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Costes"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/imgVolver"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBeneficios"
        android:layout_width="199dp"
        android:layout_height="26dp"
        android:layout_marginTop="132dp"
        android:text="Beneficios"
        android:textColor="#2C2C2C"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvCostes"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vCostes"
        android:layout_width="362dp"
        android:layout_height="186dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/bg_reserva"
        app:layout_constraintStart_toStartOf="@+id/tvBeneficios"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="341dp"
        android:layout_height="167dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="184dp"
        android:text="@string/texto_funcionalidades"
        app:layout_constraintStart_toStartOf="@+id/vCostes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="367dp"
        android:layout_height="67dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="648dp"
        android:text="La subscripción se renueva cada mes pero se puede cancelar en el perfil."
        app:layout_constraintStart_toStartOf="@+id/tvRenovar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubscripciones"
        android:layout_width="167dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="376dp"
        android:text="Subscripciones"
        android:textColor="#2C2C2C"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvCostes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRenovar"
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="588dp"
        android:text="Se me renueva la subscripción cada mes?"
        android:textColor="#2C2C2C"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvCostes"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="99dp"
        android:layout_height="85dp"
        android:layout_marginTop="432dp"
        android:background="#A4C6EE"
        android:text="12 meses 119,99€"
        app:layout_constraintStart_toStartOf="@+id/tvSubscripciones"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="85dp"
        android:layout_height="86dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="432dp"
        android:background="#A4C6EE"
        android:text="1 mes 14,99€"
        app:layout_constraintStart_toStartOf="@+id/tvSubscripciones"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="99dp"
        android:layout_height="85dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="432dp"
        android:background="#A4C6EE"
        android:text="3 meses 39,99€"
        app:layout_constraintStart_toStartOf="@+id/tvSubscripciones"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="276dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvCostes"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="208dp"
        android:layout_height="31dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/bg_boton"
        android:text="Pagar"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvCostes"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
