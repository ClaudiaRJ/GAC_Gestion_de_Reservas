<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/imgVolver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/flecha_atras_negra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Pago"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@+id/imgVolver"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgVisa"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="192dp"
        android:src="@drawable/icono_tarjeta_credito"
        app:layout_constraintStart_toStartOf="@+id/rbtnVisa"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/edMetodoPago"
        android:layout_width="167dp"
        android:layout_height="39dp"
        android:layout_marginTop="140dp"
        android:text="Método de pago"
        android:textColor="#2C2C2C"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="92dp"
        android:text="Precio: "
        android:textColor="#2C2C2C"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCoste"
        android:layout_width="70dp"
        android:layout_height="38dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="92dp"
        android:text=" "
        android:textColor="#2C2C2C"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPagoTarjeta"
        android:layout_width="167dp"
        android:layout_height="39dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="308dp"
        android:text="Pago con tarjeta"
        android:textColor="#2C2C2C"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvisa"
        android:layout_width="167dp"
        android:layout_height="39dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="196dp"
        android:text="Visa"
        android:textColor="#2C2C2C"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/imgVisa"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="276dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view7"
        android:layout_width="371dp"
        android:layout_height="1dp"
        android:layout_marginTop="240dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view8"
        android:layout_width="371dp"
        android:layout_height="1dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="296dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rbtnVisa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/rbtnPaypal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="252dp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPaypal"
        android:layout_width="167dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="252dp"
        android:text="Paypal"
        android:textColor="#2C2C2C"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/rbtnPaypal"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNumeroTarjeta"
        android:layout_width="360dp"
        android:layout_height="44dp"

        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNumeroTarjeta" />

    <TextView
        android:id="@+id/tvNumeroTarjeta"
        android:layout_width="347dp"
        android:layout_height="23dp"

        android:layout_marginTop="340dp"
        android:text="Número de la tarjeta"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etFechaCaducidad"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFechaCaducidad" />

    <TextView
        android:id="@+id/tvCVC"
        android:layout_width="347dp"
        android:layout_height="23dp"
        android:layout_marginTop="496dp"
        android:text="CVC"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCVC"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCVC" />

    <TextView
        android:id="@+id/tvTitularTarjeta"
        android:layout_width="352dp"
        android:layout_height="24dp"

        android:layout_marginStart="4dp"
        android:layout_marginTop="584dp"
        android:text="Nombre titular de la tarjeta"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNombTitularTarjeta"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitularTarjeta" />

    <Button
        android:id="@+id/btnPagar"
        android:layout_width="236dp"
        android:layout_height="0dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="672dp"
        android:background="@drawable/bg_boton"
        android:text="Pagar"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFechaCaducidad"
        android:layout_width="347dp"
        android:layout_height="23dp"
        android:layout_marginTop="416dp"
        android:text="Fecha de caducidad (MM/YY)"
        android:textColor="#2C2C2C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvPago"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
