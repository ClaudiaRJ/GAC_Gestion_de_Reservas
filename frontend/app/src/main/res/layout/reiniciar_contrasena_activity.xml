<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgEasyTable"
        android:layout_width="377dp"
        android:layout_height="255dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/logo_easy_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="357dp"
        android:layout_height="96dp"
        android:layout_marginTop="252dp"
        android:text="Reiniciar contraseña"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="@id/imgEasyTable"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="355dp"
        android:layout_height="46dp"
        android:layout_marginTop="420dp"
        android:text="Email"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/tvBienvenido"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRecuperarContraseña2"
        android:layout_width="356dp"
        android:layout_height="47dp"
        android:layout_marginTop="368dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Por favor introduzca su email para recuperar su cuenta"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/tvBienvenido"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="596dp"
        android:clickable="true"
        android:focusable="true"
        android:text="Volver a iniciar sesión"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/tvBienvenido"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnReiniciarContraseña"
        android:layout_width="343dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="492dp"
        android:background="#2c2c2c"
        android:text="Reiniciar contraseña"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/tvBienvenido"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
